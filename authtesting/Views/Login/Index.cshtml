        <div class="container">
            <br />
            <div class="col-md-2">

            </div>
            <div class="col-md-7">
                <div class="panel-group">
                    <div class="panel panel-primary">
                        <div class="panel panel-heading">
                            <h3 class="text-center">User Login</h3>
                        </div>
                        <div class="panel panel-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Username</label>
                                </div>
                                <div class="col-md-3 form-group">
                                    @*<input type='hidden' value='@Request.QueryString["state"]' id='Stateid' />*@
                                    @*@Html.HiddenFor(x=>x.Stateid,new { @value=Request.QueryString["state"]})*@
                                    @Html.Hidden("Stateid",Request.QueryString["state"])
                                    @*@Html.TextBoxFor(x => x.Stateid,new {@value=Request.QueryString["state"] ,@type = "hidden",id="sss" })*@
                                    @*<input type="text" id="txtusername" class="form-control" required />*@
                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Password</label>
                                </div>
                                <div class="col-md-3">

                                    @*<input type="password" id="txtpassword" class="form-control" required />*@
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-offset-2">
                                    @*<input type="button" id="btnlogin" value="Login" class="btn btn-primary" />*@
                                    <input type="submit" id="btnlogin" value="Login" class="btn btn-primary" />
                                    @*<a class="btn btn-primary" href="/Account/MyLoginPage?ReturnUrl =@(Url.Encode(Request.QueryString["ReturnUrl"])) ">Login here</a><br />*@
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    }

    <br />
    <div id="errorlog" class="alert alert-danger collapse">
        <a id="linkclose" href="#" class="close">&times;</a>
        <div id="divtexterror"></div>
    </div>
</body>
